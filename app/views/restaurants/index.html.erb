<h1>Restaurants</h1>

<% @restaurants.each do |restaurant| %>
  <%= link_to restaurant_path(restaurant) do %>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= restaurant.name %></h5>
        <h6 class="card-sub-title"> Cuisine: <em><%= restaurant.category %></em></h6>
        <p class="card-text"> <i class="fa-solid fa-location-dot"> <%= restaurant.address %> </i> <br>
        <i class="fa-solid fa-phone"> <%= restaurant.phone_number %> </i> </p>
        <div class="restaurant-links">
          <img class="card-img-top img-index" src="https://source.unsplash.com/random/200Ã—150/?food" alt="Card image cap">
        </div>
      </div>
    </div>
  <% end %>
<% end %>

<%= link_to new_restaurant_path(@restaurant) do %>
  <button><i class="fa-solid fa-plus">New restaurant</i></button>
<% end %>
